<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/colorWhiteSecondary"
    android:layout_height="match_parent"
    tools:context=".presentation.views.FoldersActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Folders"
        android:gravity="center"
        android:background="@color/colorWhiteSecondary"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_folders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />
    <ImageButton
        android:id="@+id/btn_create_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/rv_folders"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:elevation="0dp"
        android:padding="@dimen/_12sdp"
        android:src="@drawable/ic_add"
        app:tint="@color/colorYellowPrimary"
        app:cornerRadius="12dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>